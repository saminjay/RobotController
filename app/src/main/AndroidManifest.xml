<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saminjay.robotcontroller">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="About" />

        <activity
            android:name=".ListActivity"
            android:label="Robot Controller" />

        <activity
            android:name=".MainActivity"
            android:label="Robot Controller" />

        <activity
            android:name=".RemoteActivity"
            android:label="Remote Controller" />

        <activity
            android:name=".VoiceActivity"
            android:label="Voice Controller" />

        <activity
            android:name=".MotionActivity"
            android:label="Motion Sensor" />

    </application>

</manifest>